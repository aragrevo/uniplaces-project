---
import Image from '@components/Image.astro';
const {name, count} = Astro.props;
---

<button
  type='button'
  id={name}
  class='btn-city group relative inline-flex items-center capitalize px-5 py-2.5 text-xs font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-1 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800'
>
  {name}
  <span
    class='inline-flex items-center justify-center w-4 h-4 ml-2 text-xs font-semibold text-blue-800 bg-blue-200 rounded-full'
  >
    {count}
  </span>
  <Image
    src={`/images/${name}.webp`}
    alt={`Imagen de ${name}`}
    height='480'
    width='328'
    class='absolute top-full z-10 opacity-0 group-hover:opacity-100 h-0 w-0 group-hover:w-full group-hover:h-auto'
  />
</button>
