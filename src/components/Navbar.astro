---
const menu = [
  {
    title: 'Uniplaces',
    href: '/',
  },
  {
    title: 'SuperCasa',
    href: '/supercasa/',
  },
];
---

<nav class='w-full py-3 text-gray-200 shadow-lg'>
  <div class='w-full flex flex-wrap items-center justify-between container max-w-6xl mx-auto px-4'>
    <div class='flex flex-col sm:flex-row gap-4 flex-grow items-center' id='navbarSupportedContent1'>
      <a class='text-xl text-white pr-2 font-semibold' href='/'>Home Project</a>
      {Astro.url.pathname}
      <ul class='flex gap-4 mr-auto'>
        {
          menu.map(({title, href}) => (
            <li class='p-2'>
              <a
                class={`text-white transition hover:opacity-80 focus:opacity-80 p-0 ${
                  Astro.url.pathname === href
                    ? 'opacity-100 pointer-events-none'
                    : 'opacity-60 hover:underline-offset-8'
                }`}
                href={href}
                rel={Astro.url.pathname !== href && 'preload'}>
                {title}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</nav>
